<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/saved">Saved Articles</a>
            </li>
        </ul>
    </div>
</nav>
<div class="jumbotron jumbotron-fluid text-center">
    <div class="container">
        <h1 class="display-4">YOUR SAVED ARTICLES</h1>
        <h2 class="lead">DIGITAL TRENDS</h2>
        <hr class="my-4">
        <div class="container justify-content-center">
            <a class="clearBtn btn btn-success btn-lg" href="#" role="button">CLEAR ARTICLES</a>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-9 order-md-1">
            <div class="container" id="savedwrapper">
                {{#each articles}}
                {{#if saved}}
                <div class="card">
                    <div class="card-header" id="savedarticle-header">
                        <h3>{{this.title}}</h3>
                        <span><a class="unSaveBtn btn btn-danger" data-id="{{_id}}" href="*" role="button" style="float: right">DELETED
                                FROM SAVED</a></span>
                        <span><a class="noteBtn btn btn-warning" data-id="{{_id}}" href="*" role="button" style="float: right">ARTICLE
                                NOTES</a></span>
                    </div>
                    <div class="card-body">
                        <div id="article-link">{{this.link}}</div>
                        <div id="article-summary">{{this.summary}}</div>

                    </div>

                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-3 order-md-2 mb-4">
            <h4>Article Notes</h4>
            <p class="titleToShow" value=""></p>
            {{!-- <!-- {{#each notes}} -->; --}}
            <ul class="noteList list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="notesbody">{{this.body}}</h6>
                    </div>
                    <span>
                        <button type="submit" class="btn btn-secondary">X</button>
                    </span>
                </li>

                <form class="card p-2">
                    <div class="input-group">
                        <textarea id="noteInput" class="form-control" rows="4" name="body" placeholder="notes"></textarea>
                    </div>
                    <button type="submit" class="noteSubmitBtn btn btn-secondary">Submit</button>
                </form>
                
            </ul>
            {{!-- <!--{{/each}} --> --}}
        </div>
    </div>
</div>
