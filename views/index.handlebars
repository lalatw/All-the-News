<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/saved">Saved Articles</a>
            </li>
        </ul>
    </div>
</nav>
<div class="jumbotron jumbotron-fluid text-center">
    <div class="container">
        <h1 class="display-4">MONGO SCRAPER</h1>
        <h2 class="lead">Los Angles Times</h2>
        <hr class="my-4">
        <div class="container justify-content-center">
            <a class="scrapeBtn btn btn-success btn-lg" href="#" role="button">SCRAPE NEW ARTICLES</a>
            <a class="clearBtn btn btn-success btn-lg" href="#" role="button">CLEAR ARTICLES</a>
        </div>
    </div>
</div>


<div class="container-fluid" id="mainwrapper">
    {{#each articles}}
    {{#unless saved}}
    <div class="card">
        <div class="card-header" id="article-header">
            <h3>{{this.title}}<span><a class="saveBtn btn btn-danger" data-id="{{_id}}" href="api/saved" role="button" style="float: right">SAVE
                        ARTICLE</a></span></h3>
        </div>
        <div class="card-body">
            <a id="article-link" href='http://www.latimes.com/{{this.link}}'>http://www.latimes.com/{{this.link}}</a>
        </div>

    </div>
    {{/unless}}
    {{/each}}
</div>